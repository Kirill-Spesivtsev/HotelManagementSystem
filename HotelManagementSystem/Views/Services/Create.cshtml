@model HotelManagementSystem.Models.Service

@{
    ViewData["Title"] = "Create";
}

<section class="full-height">
    <div class="row form-row">
        <div class="col-md-10">
            <div class="container-border p-3 mt-4 mb-4">
                <div class="container-body">
                    <h3 class="mb-2 pt-2 text-center">Create New Service</h3>
                    <hr />
                    <div id="t_list" class="p-3">
                        <form asp-action="Create" asp-controller="Services">
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-4">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-floating mb-3">
                                        <input asp-for="Name" class="form-control" />
                                        <label asp-for="Name" class="control-label"></label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Info" class="form-control" style="height: 140px"></textarea>
										<label asp-for="Info" class="control-label"></label>
                                        <span asp-validation-for="Info" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-4">
                                    <div class="form-floating mb-3">
									    <input asp-for="Price" type="number" step="0.01" class="form-control" />
									    <label asp-for="Price" class="control-label"></label>
									    <span asp-validation-for="Price" class="text-danger"></span>
								    </div>
                                    <div class="form-floating mb-3">
                                        <select asp-for="ServiceTypeId" class="form-control" asp-items="ViewBag.ServiceTypeId"></select>
                                        <label asp-for="ServiceTypeId" class="control-label"></label>
                                        <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                            <div class="centered-content mt-5 mb-3">
                                <a asp-action="Index" class="btn btn-danger me-3 w-25">Back</a>
                                <input type="submit" value="Save" class="btn btn-success w-25"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
