@model HotelManagementSystem.Models.Apartment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApartmentId" />
            <div class="form-group">
                <label asp-for="ApartmentName" class="control-label"></label>
                <input asp-for="ApartmentName" class="form-control" />
                <span asp-validation-for="ApartmentName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFree" /> @Html.DisplayNameFor(model => model.IsFree)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentTypeId" class="control-label"></label>
                <select asp-for="ApartmentTypeId" class="form-control" asp-items="ViewBag.ApartmentTypeId"></select>
                <span asp-validation-for="ApartmentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentCategoryId" class="control-label"></label>
                <select asp-for="ApartmentCategoryId" class="form-control" asp-items="ViewBag.ApartmentCategoryId"></select>
                <span asp-validation-for="ApartmentCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentStatusId" class="control-label"></label>
                <select asp-for="ApartmentStatusId" class="form-control" asp-items="ViewBag.ApartmentStatusId"></select>
                <span asp-validation-for="ApartmentStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentDailyPriceId" class="control-label"></label>
                <select asp-for="ApartmentDailyPriceId" class="form-control" asp-items="ViewBag.ApartmentDailyPriceId"></select>
                <span asp-validation-for="ApartmentDailyPriceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
